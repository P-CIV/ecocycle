rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ====================================================================
    // FONCTIONS UTILITAIRES
    // ====================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return request.auth != null && 
        request.auth.token.email.matches('.*@ecocycle\\.ci$');
    }

    function canInitialize() {
      return isAdmin();
    }

    function isInitializing() {
      return request.auth != null &&
             request.auth.token.email.matches('.*@ecocycle\\.ci$') &&
             !exists(/databases/$(database)/documents/parametres/system_status);
    }

    // ====================================================================
    // SYSTÈME WEB - COLLECTIONS ORIGINALES (PRÉSERVÉES)
    // ====================================================================
    
    // Règle globale : les admins peuvent initialiser
    match /{document=**} {
      allow read: if isAuthenticated();
      allow write: if canInitialize();
    }

    // Collection utilisateurs (web)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || request.auth.uid == userId;

      // Sous-collections pour APP MOBILE uniquement
      match /deposits/{depositId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow create: if request.auth.uid == userId;
        allow update: if request.auth.uid == userId || isAdmin();
        allow delete: if request.auth.uid == userId || isAdmin();
      }

      match /challenges/{challengeId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow write: if request.auth.uid == userId || isAdmin();
      }

      match /pointsHistory/{historyId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow create: if request.auth.uid == userId;
        allow update: if isAdmin();
        allow delete: if isAdmin();
      }

      match /rewards/{rewardId} {
        allow read: if request.auth.uid == userId || isAdmin();
        allow write: if request.auth.uid == userId || isAdmin();
      }
    }

    // Collection collectes (WEB - agents enregistrent leurs collectes)
    match /collectes/{collecteId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || 
        (request.auth != null && request.resource.data.agentId == request.auth.uid);
    }

    // Collection points (WEB)
    match /points/{pointId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Collection statistiques (WEB)
    match /statistiques/{statId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Collection agents (WEB - agents web)
    match /agents/{agentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || request.auth.uid == agentId;
    }

    // Collection paramètres (WEB)
    match /parametres/{paramId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin() || isInitializing();
    }

    // Collection zones (WEB)
    match /zones/{zoneId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Collection objectifs (WEB)
    match /objectifs/{objectifId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Collection activites (WEB - agents enregistrent leurs activités)
    match /activites/{activiteId} {
      allow read: if isAuthenticated();
      allow write: if request.auth != null && 
        (request.resource.data.agentId == request.auth.uid || isAdmin());
    }

    // Collection qrcodes (WEB - générés par agents)
    match /qrcodes/{codeId} {
      allow read: if isAuthenticated();
      allow create: if request.auth != null && 
        request.resource.data.createdBy == request.auth.uid;
      allow update: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         request.resource.data.createdBy == request.auth.uid);
      allow delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
    }

    // ====================================================================
    // COLLECTIONS APP MOBILE (NOUVELLES - N'INTERFÈRENT PAS)
    // ====================================================================

    // Centre de recyclage (mobile)
    match /recyclingCenters/{centerId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Classement (mobile)
    match /leaderboard/{period}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // Cloud Functions uniquement
    }

    // Notifications (mobile)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
                    (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAdmin();
      allow update: if isAuthenticated() && 
                      resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && 
                      (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Configuration app (mobile)
    match /appConfig/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Feedback (mobile)
    match /feedback/{feedbackId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}